! Xdefaults
! https://github.com/echelon
! Note: C preprocessor portions are cached by 
! xrdb (the X Server Resource Database)
! Call xrdb -load Xdefaults

! ----------------------
! urxvt terminal options
! ----------------------

urxvt*background:	black 
urxvt*foreground:	white
urxvt*underlineColor: gray
urxvt*transparent:	true
urxvt*shading:		10
urxvt*scrollBar:	false

#if HOSTNAME == vaiop
	urxvt*font: xft:DejaVu Sans Mono:pixelsize=18:antialias=true:hinting=true
	urxvt*perl-lib: /home/bt/.bash/urxvt/
#else
	urxvt*font: xft:Droid Sans Mono:pixelsize=14:antialias=true:hinting=true
	urxvt*perl-lib: /home/brandon/.bash/urxvt/
#endif

! URL Highlighting and Yanking
urxvt*underlineURLs: true
urxvt.perl-ext: selection
urxvt.perl-ext: mark-yank-urls
urxvt.keysym.M-u: perl:mark-yank-urls:activate_mark_mode

