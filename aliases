# vim: set filetype=bash :
# Bash aliases (~/.bash/aliases.sh)
# Add to .bashrc, `. ~/.bash/thisfile.sh`

# Better usage or output
alias ls="ls -Bhv --color=always --group-directories-first"
alias less="less -r" # color support
alias tmux="tmux -2" # 256color
alias thttpd='thttpd -nos' # follow symlinks outside cwd
alias wget='wget -p -nd' # Page reqs and no directories
alias vi='vi -p' # Open multiple files in tabs
alias diff='colordiff'

# Shortcuts 
alias ack='ack-grep'
alias la='ls -a'
alias ll='ls -l'
alias lo='ls -o'
alias go='gnome-open'
alias paste='xclip -o -selection clipboard'
alias sighup='kill -HUP'
alias ..='cd ..'
alias ...='cd ../..'

# Typofix
alias clea='clear'
alias clera='clear'
alias cear='clear'
alias clar='clear'
alias cler='clear'
alias celar='clear'
alias claer='clear'
alias lsl='ls -l'
alias ls-l='ls -l'
alias cd..='cd ..'

# Reminders
alias quit='echo "No, exit. Get it right."'

