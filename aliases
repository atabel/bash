# vim: set filetype=bash :
# Bash aliases (~/.bash/aliases.sh)
# Add to .bashrc, `. ~/.bash/thisfile.sh`

# Better usage or output
alias ls="ls -Bhv --color=always --group-directories-first --hide=*pyc"
alias less="less -r" # color support
alias tmux="tmux -2" # 256color
alias thttpd='thttpd -nos' # follow symlinks outside cwd
alias wget='wget -p -nd' # Page reqs and no directories
alias vi='vi -p' # Open multiple files in tabs
alias diff='colordiff'
alias ll='ls -la | ack "\-\>"' # List symlinks
alias lh='ls -d .*' # List hidden

# Shortcuts 
alias ack='ack-grep'
alias go='gnome-open'
alias paste='xclip -o -selection clipboard'
alias sighup='kill -HUP'
alias ~='cd ~'
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias .....='cd ../../../..'

# Larger, custom stuff
alias reso='xdpyinfo  | grep "dimensions:"'
alias mountusb='mount -t vfat /dev/sdb1 /media/phone'
alias umountusb='umount /media/phone'

# Typofix
alias clea='clear'
alias clera='clear'
alias cear='clear'
alias clar='clear'
alias cler='clear'
alias celar='clear'
alias claer='clear'
alias kilall='killall'
alias lsl='ls -l'
alias lsa='ls -a'
alias ls-l='ls -l'
alias cd..='cd ..'

# Reminders
alias quit='echo "No, exit. Get it right."'

